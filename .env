# Basic Jitsi ENV setup for Docker
HTTP_PORT=80
HTTPS_PORT=443

# Your public domain
PUBLIC_URL=https://meet.flyworksuite.com

# Enable Let's Encrypt (SSL)
ENABLE_LETSENCRYPT=1
LETSENCRYPT_DOMAIN=meet.flyworksuite.com
LETSENCRYPT_EMAIL=you@example.com  # Replace with your real email

# Generate strong random passwords for internal services
# (You can leave these as-is for testing)
JICOFO_COMPONENT_SECRET=supersecretcomponent
JICOFO_AUTH_PASSWORD=supersecurepassword
JVB_AUTH_PASSWORD=supersecurepassword
JIGASI_XMPP_PASSWORD=supersecurepassword
JIBRI_RECORDER_PASSWORD=supersecurepassword
JIBRI_XMPP_PASSWORD=supersecurepassword

# Authentication mode: anonymous (change to 'jwt' or 'ldap' later)
AUTH_TYPE=anonymous

# Disable recording/transcription until you configure Jibri
ENABLE_RECORDING=0
ENABLE_TRANSCRIPTIONS=0

# Use default network mode
DOCKER_HOST_ADDRESS=127.0.0.1

# Time zone
TZ=America/Chicago
